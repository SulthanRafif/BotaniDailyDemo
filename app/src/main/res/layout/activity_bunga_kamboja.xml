<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.TanamanHiasBunga.InformasiTanamanHiasBunga.BungaKambojaActivity"
    android:background="@color/warnaBackgroundApp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carter_one"
        android:text="Bunga Kamboja"
        android:textColor="@color/warnaTulisan"
        android:textSize="25dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="70dp"
        android:id="@+id/kategori_tanaman"
        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bunga_kamboja"
        android:id="@+id/Gambar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="400dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Gambar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/deskripsi_tanaman"
        android:fontFamily="@font/carter_one"
        android:textSize="25dp"
        android:text="Deskripsi Tanaman"
        android:textColor="@color/warnaTulisan"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/deskripsi_tanaman"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/isi_des"
        android:text="Bunga kamboja ditemukan oleh seorang botanis berkebangsaan Prancis yang bernama Charles Plumier, karena itulah bunga kamboja mempunyai nama Latin Plumeria. Bunga kamboja dulu hanya kita jumpai di tempat-tempat yang berbau religi seperti pemakaman dan tempat-tempat lain, namun kini hal itu sudah berubah. Namun, bunga kamboja diperkirakan pertama kali dibawa ke Indonesia oleh bangsa Portugis dan Belanda yang mana keduanya merupakan bangsa yang peduli terhadap lingkungan dan sangat menyukai alam tropis."
        android:textColor="@color/warnaTulisan"
        android:textSize="9dp"
        android:fontFamily="@font/carter_one"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/isi_des"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cara_menanam"
        android:fontFamily="@font/carter_one"
        android:textSize="25dp"
        android:text="Cara Menanam"
        android:textColor="@color/warnaTulisan"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/cara_menanam"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/isi_menanam"
        android:text="Pilihlah indukan yang unggul (bebas dari penyakit dan banyak bunganya),ambil bijinya. Siapkan media tanam (tray atau nampan untuk berkebun yang diisi sekam bakar dan pasir kasar yang di campur pupuk kandang). Tanam biji adenium, atur jarak antar biji. Basahi media tanam secukupnya. Tutup tray dengan kain tipis. Taruh tray di tempat teduh. Jika biji sudah tumbuh berkecambah dan mempunyai daun lebih dari 3 helai, pindahkan ke dalam polybag. "
        android:textColor="@color/warnaTulisan"
        android:textSize="10dp"
        android:fontFamily="@font/carter_one"
        />

</androidx.constraintlayout.widget.ConstraintLayout>