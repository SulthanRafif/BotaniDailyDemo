<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.TanamanHiasBunga.InformasiTanamanHiasBunga.BungaAnggrekActivity"
    android:background="@color/warnaBackgroundApp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carter_one"
        android:text="Bunga Anggrek"
        android:textColor="@color/warnaTulisan"
        android:textSize="25dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="70dp"
        android:id="@+id/kategori_tanaman"
        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/anggrek"
        android:id="@+id/Gambar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="400dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Gambar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/deskripsi_tanaman"
        android:fontFamily="@font/carter_one"
        android:textSize="25dp"
        android:text="Deskripsi Tanaman"
        android:textColor="@color/warnaTulisan"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/deskripsi_tanaman"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/isi_des"
        android:textSize="10dp"
        android:fontFamily="@font/carter_one"
        android:textColor="@color/warnaTulisan"
        android:text="Anggrek memiliki nama latinÂ Orchidaceae, yaitu merupakan satu suku tumbuhan berbunga yang memiki anggota atau jenis terbanyak. Jenis-jenisnya tersebar luas dari mulai wilayah tropika basah sampai lokasi sirkumpolar, walau beberapa besar anggotanya ditemukan di wilayah tropika. Umumnya anggota suku ini hidup sebagai epifit, terlebih yang datang dari wilayah tropika. Anggrek di wilayah beriklim sedang umumnya hidup di tanah serta membentuk umbi sebagai langkah beradaptasi pada musim dingin."
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/isi_des"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cara_menanam"
        android:fontFamily="@font/carter_one"
        android:textSize="25dp"
        android:text="Cara Menanam"
        android:textColor="@color/warnaTulisan"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/cara_menanam"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/isi_menanam"
        android:textSize="10dp"
        android:fontFamily="@font/carter_one"
        android:textColor="@color/warnaTulisan"
        android:text="Menanam di dalam pot disarankan untuk menggunakan pot dari tanah liat yang mempunyai lubang-lubang kecil berdiameter 1,5 cm. Menanam dengan ditempel di batang pohon. Penyiraman untuk penyiraman dimusim panas dilakukan sehari dua kali sedangkan untuk penyiraman di musim penghujan apabila anggrek berada di luar rumah pindahkan ke dalam agar tidak terperincik air hujan sehingga membuat pembuskkan akar."
        />

</androidx.constraintlayout.widget.ConstraintLayout>